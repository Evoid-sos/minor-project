<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nearbyHelp"
    android:background="@drawable/login_bg3">

    <ImageView
        android:id="@+id/policeStations"
        android:layout_width="139dp"
        android:layout_height="155dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fireStations"
        app:layout_constraintEnd_toStartOf="@+id/hospitals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/policehelp" />

    <ImageView
        android:id="@+id/hospitals"
        android:layout_width="139dp"
        android:layout_height="155dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/oldage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/policeStations"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hospital" />

    <ImageView
        android:id="@+id/fireStations"
        android:layout_width="139dp"
        android:layout_height="155dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oldage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/policeStations"
        app:srcCompat="@drawable/firehelp" />

    <ImageView
        android:id="@+id/oldage"
        android:layout_width="139dp"
        android:layout_height="155dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fireStations"
        app:layout_constraintTop_toBottomOf="@+id/hospitals"
        app:srcCompat="@drawable/oldagehelp" />

    <ImageView
        android:id="@+id/pharmacies"
        android:layout_width="139dp"
        android:layout_height="155dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fireStations"
        app:srcCompat="@drawable/pharmacy" />
</androidx.constraintlayout.widget.ConstraintLayout>

